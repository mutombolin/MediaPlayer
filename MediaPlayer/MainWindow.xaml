<Window x:Class="MediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:common="clr-namespace:MediaPlayer"
        Title="MediaPlayer"
        Height="565"
        Width="946"
        Style="{DynamicResource ResourceKey=DefaultStyle}"
        >

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="640*" />
            <ColumnDefinition Width="300*" />
        </Grid.ColumnDefinitions>
                
        <common:MediaPlayerListCtrl x:Name="mediaPlayerListCtrl" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <common:MediaPlayerPlayCtrl x:Name="mediaPlayerPlayCtrl" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </Grid>
</Window>
