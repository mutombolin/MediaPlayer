<Window x:Class="MediaPlayer.Windows.WinMediaPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinMediaPlayer"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Height="0"
        Width="0"
        Top="0"
        Left="0"
        >
    
    <Grid Background="Black">
        
        <MediaElement Name="mediaElementMainVideo" LoadedBehavior="Manual" UnloadedBehavior="Manual" />
        
        <TextBlock Name="textBlockError" FontFamily="Arial" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Foreground="Red" />
        
    </Grid>
</Window>
